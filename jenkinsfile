pipeline {
    agent any

    environment {
        DOCKER_IMAGE_NAME = 'shashankmittra/calculator:latest'
        GITHUB_REPO_URL = 'https://github.com/shashankmittra/calculator.git'
        MAVEN_HOME = '/opt/apache-maven-3.9.6'   
    }

    stages {
        stage('Checkout') {
            steps {
                script {
                    // Checkout the code from the GitHub repository
                    git branch: 'main', url: "${GITHUB_REPO_URL}"
                }
            }
        }

        stage('Maven Build') {
            steps {
                script {
                    env.PATH = "${env.MAVEN_HOME}/bin:${env.PATH}"
                    sh 'mvn clean install'
                }
            }
        }

        stage('Run Tests') {
            steps {
                script {
                    // Set up Maven in the PATH
                    env.PATH = "${env.MAVEN_HOME}/bin:${env.PATH}"
                    sh 'mvn test' 
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    // Build Docker image
                    docker.build("${DOCKER_IMAGE_NAME}", '.')
                }
            }
        }

        stage('Push Docker Image') {
            steps {
                script {
                    docker.withRegistry('', 'dockerhub') {
                        sh 'docker push shashankmittra/calculator:latest'
                    }
                }s
            }
        }

        stage('Run Ansible Playbook') {
            steps {
                script {
                    sh '/opt/homebrew/bin/ansible-playbook --version'

                    // Run Ansible playbook with full path
                    sh '/opt/homebrew/bin/ansible-playbook /var/root/.jenkins/workspace/new/deploy.yml -i /var/root/.jenkins/workspace/new/inventory'
                }
            }
        }
    }
}